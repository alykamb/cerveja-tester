{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Local Debug",
            "program": "${workspaceFolder}/dist/server.js",
            "outFiles": ["${workspaceFolder}/**/*.js"]
        },
        {
            "name": "Container Debug",
            "type": "node",
            "request": "attach",
            "port": 10004,
            "address": "127.0.0.1",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/srv/www",
            "protocol": "inspector",
            "timeout": 100000,
            "restart": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": ["-i"]
        }
    ]
}
